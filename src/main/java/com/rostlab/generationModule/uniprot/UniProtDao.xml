<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rostlab.generationModule.uniprot.UniProtDAO">

    <resultMap id="uniProtEntityResultMap" type="com.rostlab.generationModule.uniprot.UniProtEntity">
        <result column="acc_id" property="acc_id" />
        <result column="sequence" property="sequence" />
        <result column="pdb_ids" property="pdb_ids" />
    </resultMap>

    <select id="findByAccId" resultType="uniProtEntityResultMap">
        select acc_id, sequence, pdb_ids from uniprot where acc_id = #{acc_id}
    </select>

    <select id="findBySequence" resultType="uniProtEntityResultMap">
        select acc_id, sequence, pdb_ids from uniprot where sequence = #{sequence}
    </select>

    <select id="findAll" resultType="uniProtEntityResultMap">
        select * from uniprot
    </select>

    <insert id = "insert" parameterType = "UniProtEntity">
        INSERT INTO uniprot (acc_id, sequence)
        VALUES (#{entity.acc_id}, #{entity.sequence});
    </insert>

    <update id="update" parameterType="UniProtEntity">
        UPDATE uniprot
        SET pdb_ids = (#{entity.pdb_ids})
        WHERE acc_id = #{entity.acc_id}
    </update>
</mapper>